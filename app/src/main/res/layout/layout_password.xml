        android:maxLength="1"
        android:inputType="textPassword"
        android:background="@drawable/password_bkg_mid"/>
    <EditText
        android:id="@+id/word4"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_marginLeft="-1dp"
        android:textAlignment="center"
        android:maxLength="1"
        android:inputType="textPassword"
        android:background="@drawable/password_bkg_mid"/>
    <EditText
        android:id="@+id/word5"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_marginLeft="-1dp"
        android:textAlignment="center"
        android:maxLength="1"
        android:inputType="textPassword"
        android:background="@drawable/password_bkg_mid"/>
    <EditText
        android:id="@+id/word6"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_marginLeft="-1dp"
        android:textAlignment="center"
        android:maxLength="1"
        android:inputType="textPassword"
        android:background="@drawable/password_bkg_right"/>



</LinearLayout>