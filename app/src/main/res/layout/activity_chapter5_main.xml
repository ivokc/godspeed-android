<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <Button
        android:id="@+id/getsegment_demo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="GetSegmentDemo"
        />

    <Button
        android:id="@+id/getpostan_demo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="GetPosTanDemo"
        />

    <Button
        android:id="@+id/alipay_demo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="支付宝支付动画"
        />

    <Button
        android:id="@+id/svg_show"
        android:text="显示SVG图像"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/svg_anim"
        android:text="SVG动画"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/search_anim"
        android:text="搜索动画"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>