<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <Button
        android:id="@+id/anim_xml_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XML生成动画"/>

    <Button
        android:id="@+id/anim_java_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="代码生成动画"/>

    <Button
        android:id="@+id/camera_stretch_activity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="镜头由远至近效果"/>

    <Button
        android:id="@+id/loading_demo_activity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="加载框效果"/>

    <Button
        android:id="@+id/scanner_demo_activity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="扫描效果"/>

    <Button
        android:id="@+id/xml_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="帧动画XML实现"/>

    <Button
        android:id="@+id/java_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="帧动画代码实现"/>
</LinearLayout>