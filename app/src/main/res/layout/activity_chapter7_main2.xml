<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <Button
        android:id="@+id/bezier_wave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="贝赛尔曲线--QuardTo"/>

    <Button
        android:id="@+id/normal_gesture_track"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="通过lineTo实现手势追踪"/>

    <Button
        android:id="@+id/bezier_gesture_track"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="通过贝赛尔实现手势追踪"/>

    <Button
        android:id="@+id/anim_wave_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="波浪动画"/>

    <Button
        android:id="@+id/set_shadow_layer_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="setShadowLayer示例"/>

    <Button
        android:id="@+id/text_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="文字阴影"/>

    <Button
        android:id="@+id/bitmap_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="图片添加阴影"/>
    <Button
        android:id="@+id/bitmap_shader_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BitmapShader使用示例"/>

    <Button
        android:id="@+id/telescope_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="望远镜效果"/>

    <Button
        android:id="@+id/avator_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="不规则头像效果"/>

</LinearLayout>

